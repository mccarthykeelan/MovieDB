  body
    header#header
      nav#nav.navbar.navbar-expand.navbar-dark.bg-dark.mx-auto
        .container-xxl
          a.navbar-brand(href='/') MovieReviewDB
          // Button trigger modal
          ul.navbar-nav.me-auto.mb-lg-0.w-100.justify-content-between.align-items-center
            li.nav-item.dropdown
              a#navbarDropdown.nav-link.dropdown-toggle(href='#' role='button' data-bs-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                | Movies
              .dropdown-menu(aria-labelledby='navbarDropdown')
                a.dropdown-item(href='#top-rated') Top Rated
                a.dropdown-item(href='#playing') Now Playing
                a.dropdown-item(href='#popular') Popular
            li.nav-item
              button.btn.btn--account.text-secondary(type='button' data-bs-toggle='modal' data-bs-target='#loginModal')
                i.bi.bi-person-circle.h2
              #exampleModal.modal.fade(tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true')
                .modal-dialog
                  .modal-content.bg-dark.text-light
                    .modal-header.d-block.position-relative.border-bottom-0
                      h1#accountModalLabel.modal-title.fs-5.w-100.text-center Account Details
                      button.btn-close.btn-close-white.btn-close--user(type='button' data-bs-dismiss='modal' aria-label='Close')
                    .modal-body.d-flex.flex-column
                      button.btn.btn-success.w-100.mb-3(type='button' data-bs-dismiss='modal' href="/movie/favourite") Favourite
                      button.btn.btn-warning.w-100.mb-3(type='button' data-bs-dismiss='modal') Reviews
                      button.btn.btn-info.w-100(type='button' data-bs-dismiss='modal') Account Settings
                    .modal-footer.border-top-0
                      button.btn.btn-danger.w-100(type='button' data-bs-dismiss='modal') Signout 
              #loginModal.modal.fade(tabindex='-1' aria-labelledby='loginModalLabel' aria-hidden='true')
                .modal-dialog
                  .modal-content.bg-dark.text-light
                    .modal-header.d-block.position-relative.border-bottom-0
                      h1#loginModalLabel.modal-title.fs-5.w-100.text-center Login
                      button.btn-close.btn-close-white.btn-close--user(type='button' data-bs-dismiss='modal' aria-label='Close')
                    .modal-body.d-flex.flex-column
                      form#loginForm(action="") 
                        .form-group 
                          label(for="exampleFormControlInput1") Email Address
                          input(type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com")
                        .form-group.mt-3
                          label(for="loginInput") Password
                          input(type="password" class="form-control" id="inputPassword" placeholder="Password")
                        .form-group.mt-2.text-end
                          a(href="/register") Don't have an account? Register here!
                        .form-group.mt-2
                          button.btn.btn-primary.w-100(type='button' data-bs-dismiss='modal') Login
    main
      block content

