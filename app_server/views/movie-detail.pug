                            ol.people.list-unstyled.d-flex
                                li.profile.pe-2
                                    p.fw-bold.mb-0 Christopher McQuarrie
                                    p.character Director, Writer 
                                li.profile.pe-2
                                    p.fw-bold.mb-0 Erik Jendresen
